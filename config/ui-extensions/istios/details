header:
  - name: Ready
    source: status.state
    widget: Badge
    highlights:
      positive:
        - 'Ready'
body:
  - name: Specification
    widget: Panel
    children:
      - name: Number of trusted proxies
        source: spec.config.numTrustedProxies
        visibility: '$exists($value)'

  - source: status.conditions
    widget: Table
    name: Reconciliation Conditions
    children:
      - source: type
        name: Type
      - source: status
        name: Status
        widget: Badge
        highlights:
          positive:
            - 'True'
          negative:
            - 'False'
      - source: reason
        name: Reason
      - source: message
        name: Message
      - source: '$readableTimestamp(lastTransitionTime)'
        name: Last transition
        sort: true

  - widget: EventList
    filter: '$matchEvents($$, $root.kind, $root.metadata.name)'
    name: Events
    defaultType: information